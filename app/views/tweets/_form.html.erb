<% if @tweet.errors.any? %>
  <h2>We have an error here!</h2>
  <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @tweet do |f| %>
  <%= f.text_area :tweet, :cols => "43", :rows => "5", placeholder: "Enter your tweet here..." %>

<%= image_tag @tweet.image, width: '300px' if @tweet.image? %>
<label class="btn btn-light btn-sm">
  <%= image_tag "attach.svg" %>    
  <span style="display:none;">
    <%= f.file_field :image %>
  </span>
</label>

  <%= f.submit :class => "btn btn-primary" %>
<% end %>