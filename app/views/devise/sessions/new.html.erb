<div class="main-page-container">
  <div class="main-page-body">
    <p class="main-page-body-p">Hola! Welcome to Twit-a-clone</p>
  </div>
  
  <div class="main-page-login">
    <div class="main-page-login-banner">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p class="main-page-login-p">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "main-page-login-textbox" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "main-page-login-textbox" %>
        <%= f.submit "Login", class: "main-page-login-button" %>
      </p>

      <p class="main-page-login-p"><%= link_to "Forgot password?", new_password_path(resource_name) %></p>
      <% end %>
    
    </div>
  </div>

  <div class="main-page-signup">
    <div class="main-page-signup-banner">
      <div class="main-page-signup-banner-h2">
        <h3>See What's happening in the world right now</h3>
        <h4>Sign up today!</h4>
      </div>
      
      <div class="main-page-signup-banner-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <p class="main-page-login-p">
          <%= f.text_field :name, placeholder: "Name", class: "main-page-login-textbox" %>
          <%= f.text_field :handlename, placeholder: "Twitter username @", class: "main-page-login-textbox" %>
        </p>

        <br>

        <p class="main-page-login-p">
          <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "main-page-login-textbox" %>
        </p>

        <p class="main-page-login-p">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />

          <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 char min)", class: "main-page-login-textbox" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-enter Password", class: "main-page-login-textbox" %>
        </p>

      </br>
        <%= f.submit "Sign up", class: "main-page-login-button" %>
        <% end %>
      </div>

    </div>
  </div>

  <div class="main-page-footer">
    &nbsp
  </div>
  
</div>